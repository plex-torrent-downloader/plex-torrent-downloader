datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Settings {
  id                  Int      @id @default(autoincrement())
  fileSystemRoot      String   @map("file_system_root")
  cacheSearchResults  Boolean  @default(true) @map("cache_search_results")
  saveDownloadHistory Boolean  @default(true) @map("save_download_history")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("settings")
}

model Collections {
  id        Int      @id @default(autoincrement())
  name      String
  location  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("collections")
}

model SearchResults {
  id         Int      @id @default(autoincrement())
  searchTerm String   @map("search_term")
  name       String
  hash       String
  seeders    Int?
  leechers   Int
  fileSize   String
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("search_results")
}

model Downloaded {
  id          Int       @id @default(autoincrement())
  name        String
  hash        String    @unique
  pathOnDisk  String    @map("path_on_disk")
  completedAt DateTime? @map("completed_at")
  deletedAt   DateTime? @map("deleted_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @default(now()) @updatedAt @map("updated_at")

  @@map("downloaded")
}
